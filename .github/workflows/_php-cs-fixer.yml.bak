name: PHP CS Fixer # Vérifie le style de code PHP

on: [push, pull_request] # Lancement automatique à chaque push

jobs:
  php-cs-fixer:
    runs-on: ubuntu-latest # Environnement d'exécution
    steps:
      - uses: actions/checkout@v4 # Clone le dépôt

      - name: Setup PHP
        uses: shivammathur/setup-php@v2 # Installation de PHP
        with:
          php-version: '8.3' # Version compatible avec le projet

      - name: Install dependencies
        run: composer install # Installation des dépendances

      - name: Run PHP CS Fixer
        run: vendor/bin/php-cs-fixer fix --dry-run --diff # Vérifie la conformité du code sans le modifier
